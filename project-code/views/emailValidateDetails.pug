<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Hello, world!</title>
    //- <style>
    //-   table th td {
    //-     border:1px solid black;
    //-   }
    //- </style>
</head>

<body>
    
  <ul class="nav justify-content-center bg-dark py-2">
      <li class="nav-item">
        <a style="color:#f54a06" class="nav-link active" aria-current="page" href="/">NERDpast</a>
      </li>
      <li class="nav-item ">
        <a class="nav-link text-light" href="/NERDpast/emailValidate">Email-Validate</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text-light" href="/NERDpast/blacklist-ip">FMP</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled">API</a>
      </li>
  </ul>

        
  <div class="container text-center mt-5">
    
    <div id="blacklist-detail"class=" col-md-6 col-12">
        
        <h5>Email: #{data.email}</h5>
        
        <h5 class="text-dark">Domain : #{data['domain']}</h5>
        <h5 class="text-darks">Is-Freemail : #{data['is-freemail']}</h5>
        <h5 class="text-dark">Is-Personal : #{data['is-personal']}</h5>
        <h5 class="text-dark">Provider : #{data['provider']}</h5>

        - if(data['is-disposable']==true){
            <h5 class="text-dark bg-danger">Is-disposable : #{data['is-disposable']}</h5>
        -}else{
            <h5 class="text-light bg-success">Is-disposable : #{data['is-disposable']}</h5>
        -}

        - if(data['valid']==false){
            <h5 class="text-dark bg-danger">Is-Valid : #{data['valid']}</h5>
        -}else{
            <h5 class="text-light bg-success">Is-Valid : #{data['valid']}</h5>
        -}

        - if(data['syntax-error']==true){
            <h5 class="text-dark bg-danger">Syntax-Error : #{data['syntax-error']}</h5>
        -}else{
            <h5 class="text-light bg-success">Syntax-Error : #{data['syntax-error']}</h5>
        -}

        - if(data['domain-error']==true){
            <h5 class="text-dark bg-danger">Domain-Error : #{data['domain-error']}</h5>
        -}else{
            <h5 class="text-light bg-success">Domain-Error : #{data['domain-error']}</h5>
        -}

    </div>

    
    
    <h2 class="mt-5">Meaning of Keywords Used</h2>
    <div class="container mt-5">
        <table style="width:100%;border:1px solid black;">
          <tr style="border:2px solid black">
            <th>Keyword</th>
            <th>Type</th>
            <th>Description</th>
          </tr>
          <tr style="border:2px solid black">
            <td>valid</td>
            <td>boolean</td>
            <td>Is this a valid email</td>
          </tr>
          <tr style="border:2px solid black">
            <td>is-freemail</td>
            <td>boolean</td>
            <td>True if this address is a free-mail address</td>
          </tr>
          <tr style="border:2px solid black">
            <td>is-disposable</td>
            <td>boolean</td>
            <td>True if this address is a disposable, temporary or darknet related email address</td>
          </tr>
          <tr style="border:2px solid black">
            <td>is-personal</td>
            <td>boolean</td>
            <td>True if this address belongs to a person. False if this is a role based address, e.g. admin@, help@, office@, etc.</td>
          </tr>
        </table>
    </div>
    
    
  </div>     
        
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"crossorigin="anonymous"></script>
</body>

</html>